#!/bin/sh
if [ -f .temp.c ]; then 
    rm .temp.c
fi
node --enable-source-maps -e '
try {
    const fs = require("fs");
    fs.writeFileSync("main.c", require("./lib").compile(fs.readFileSync("'$1'").toString(), "c", true));
} catch (error) {
    if ("toStringColors" in error) {
        console.error(error.toStringColors());
    } else {
        console.error(error);
    }
    if (typeof error === "object" && error && "stack" in error) {
        console.error(error.stack);
    }
    process.exit(1);
}' && make